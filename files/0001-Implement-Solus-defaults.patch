From cc1660fca5b537bfcc0a1e0be78602fbf1519cf5 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Sat, 11 Jul 2015 12:38:07 +0100
Subject: [PATCH] Implement Solus defaults

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 src/org.gnome.Terminal.gschema.xml | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/src/org.gnome.Terminal.gschema.xml b/src/org.gnome.Terminal.gschema.xml
index 104e662..c6ee0f6 100644
--- a/src/org.gnome.Terminal.gschema.xml
+++ b/src/org.gnome.Terminal.gschema.xml
@@ -233,7 +233,7 @@
       <summary>Palette for terminal applications</summary>
     </key>
     <key name="font" type="s">
-      <default>'Monospace 12'</default>
+      <default>'Monospace 10'</default>
       <summary>A Pango font name and size</summary>
     </key>
     <key name="backspace-binding" enum="org.gnome.Terminal.EraseBinding">
@@ -334,11 +334,11 @@
       <summary>Whether ambiguous-width characters are narrow or wide when using UTF-8 encoding</summary>
     </key>
     <key name="use-transparent-background" type="b">
-      <default>false</default>
+      <default>true</default>
       <summary>Whether to use a transparent background</summary>
     </key>
     <key name="background-transparency-percent" type="i">
-      <default>50</default>
+      <default>11</default>
       <range min="0" max="100"/>
       <summary>Adjust the amount of transparency</summary>
       <description>A value between 0 and 100, where 0 is opaque and 100 is fully transparent.</description>
